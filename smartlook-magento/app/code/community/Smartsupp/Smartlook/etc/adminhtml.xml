<config>
    <menu>
        <customer>
            <children>
            <smartlook translate="title" module="smartlook">
                <title>Smartlook</title>
                <action>adminhtml/system_config/edit/section/smartlook</action>
                <sort_order>999</sort_order>
            </smartlook>
            </children>
        </customer>
    </menu>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <smartlook translate="title" module="smartlook">
                                        <title>Smartlook</title>
                                    </smartlook>
                                </children>
                            </config>
                        </children>
                    </system>
                    <customer>
                        <children>
                            <smartlook translate="title" module="smartlook">
                                <title>Smartlook</title>
                            </smartlook>
                        </children>
                    </customer>
                </children>
            </admin>
        </resources>
    </acl>
</config>
